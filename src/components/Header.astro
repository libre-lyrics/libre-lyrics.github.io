---
export interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 h-16 bg-surface-0/80 backdrop-blur-xl border-b border-white/[0.06]">
  <div class="max-w-[1400px] h-full mx-auto px-6 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 text-white font-bold text-lg hover:no-underline group">
      <img src="/logo.png" alt="LibreLyrics" class="h-10 w-auto" />
      <span>Libre<span class="text-brand-400 group-hover:text-brand-300 transition-colors">Lyrics</span></span>
    </a>

    <nav class="hidden md:flex items-center gap-6">
      <a href="/docs/getting-started" class="text-sm font-medium text-gray-400 hover:text-white transition-colors">Docs</a>
      <a href="/docs/api" class="text-sm font-medium text-gray-400 hover:text-white transition-colors">API</a>
      <a href="/docs/plugins" class="text-sm font-medium text-gray-400 hover:text-white transition-colors">Plugins</a>
      <a
        href="https://github.com/librelyrics/librelyrics"
        target="_blank"
        rel="noopener"
        class="text-gray-400 hover:text-white transition-colors"
        title="GitHub"
      >
        <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z" />
        </svg>
      </a>
    </nav>

    <button id="mobile-toggle" class="md:hidden text-white p-2" aria-label="Toggle menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M3 12h18M3 6h18M3 18h18" />
      </svg>
    </button>
  </div>
</header>
